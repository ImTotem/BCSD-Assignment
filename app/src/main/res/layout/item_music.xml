<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_margin="5dp"
        android:background="@color/cardview_shadow_start_color">

        <ImageView
            android:id="@+id/album_image_view"
            android:layout_width="63dp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toStartOf="@id/title_text_view"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/album_image" />

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/duration_text_view"
            app:layout_constraintEnd_toStartOf="@id/resume_button"
            app:layout_constraintStart_toEndOf="@id/album_image_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/duration_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/resume_button"
            app:layout_constraintStart_toEndOf="@id/album_image_view"
            app:layout_constraintTop_toBottomOf="@id/title_text_view" />

        <ImageView
            android:id="@+id/resume_button"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            app:layout_constraintEnd_toStartOf="@id/stop_button"
            app:srcCompat="@drawable/baseline_play_arrow_24"
            android:contentDescription="@string/play_or_pause" />

        <ImageView
            android:id="@+id/stop_button"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/baseline_stop_24"
            android:contentDescription="@string/stop" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>