<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_google_logo"
        android:layout_width="75dp"
        android:layout_height="55dp"
        app:srcCompat="@drawable/ic_logo_google"
        app:layout_constraintStart_toStartOf="@id/text_google"
        app:layout_constraintEnd_toEndOf="@id/text_google"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_google"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/text_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logo_name"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/image_google_logo"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        app:constraint_referenced_ids="image_google_logo, text_google"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <TextView
        android:id="@+id/label_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_account"
        app:layout_constraintBottom_toTopOf="@id/editText_account"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintVertical_chainStyle="packed"/>

    <EditText
        android:id="@+id/editText_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/label_account"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@id/label_pwd"
        app:layout_constraintEnd_toEndOf="@id/label_account"
        app:layout_constraintStart_toStartOf="@id/label_account"
        app:layout_constraintTop_toBottomOf="@id/label_account" />

    <TextView
        android:id="@+id/label_pwd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_password"
        app:layout_constraintBottom_toTopOf="@id/editText_pwd"
        app:layout_constraintEnd_toEndOf="@id/editText_account"
        app:layout_constraintStart_toStartOf="@id/editText_account"
        app:layout_constraintTop_toBottomOf="@id/editText_account" />

    <EditText
        android:id="@+id/editText_pwd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/label_password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@id/button_login"
        app:layout_constraintEnd_toEndOf="@id/label_pwd"
        app:layout_constraintStart_toStartOf="@id/label_pwd"
        app:layout_constraintTop_toBottomOf="@id/label_pwd" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/login"
        app:layout_constraintBottom_toTopOf="@id/button_sign_in"
        app:layout_constraintEnd_toEndOf="@id/editText_pwd"
        app:layout_constraintStart_toStartOf="@id/editText_pwd"
        app:layout_constraintTop_toBottomOf="@id/editText_pwd" />

    <Button
        android:id="@+id/button_sign_in"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/signin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/button_login"
        app:layout_constraintStart_toStartOf="@id/button_login"
        app:layout_constraintTop_toBottomOf="@id/button_login" />

</androidx.constraintlayout.widget.ConstraintLayout>