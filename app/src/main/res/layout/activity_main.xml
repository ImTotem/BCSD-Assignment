<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="stopWatch"
            type="io.github.imtotem.bcsd_assignment.viewmodel.StopWatchViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="@{stopWatch.elapse}"
            android:textAlignment="center"
            android:textSize="70sp"
            android:paddingHorizontal="30dp"
            app:layout_constraintBottom_toTopOf="@id/head_interval"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="00:00.00"
            app:layout_constraintVertical_weight="2.5" />

        <TextView
            android:id="@+id/head_section"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="@string/section"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/divider"
            app:layout_constraintEnd_toStartOf="@id/head_interval"
            app:layout_constraintTop_toTopOf="@id/head_interval"
            app:layout_constraintBottom_toBottomOf="@id/head_interval"
            app:layout_constraintVertical_weight="0.5" />

        <TextView
            android:id="@+id/head_interval"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="@string/interval"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/container"
            app:layout_constraintEnd_toStartOf="@id/head_elapse"
            app:layout_constraintStart_toEndOf="@id/head_section"
            app:layout_constraintTop_toBottomOf="@id/timer"
            app:layout_constraintVertical_weight="0.4"/>

        <TextView
            android:id="@+id/head_elapse"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="@string/all_time"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/head_interval"
            app:layout_constraintEnd_toEndOf="@id/divider"
            app:layout_constraintTop_toTopOf="@id/head_interval"
            app:layout_constraintBottom_toBottomOf="@id/head_interval" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@id/head_interval"
            app:layout_constraintBottom_toTopOf="@id/container"
            app:layout_constraintStart_toStartOf="@id/timer"
            app:layout_constraintEnd_toEndOf="@id/timer"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/button_container"
            app:layout_constraintTop_toBottomOf="@id/head_interval"
            app:layout_constraintStart_toStartOf="@id/divider"
            app:layout_constraintEnd_toEndOf="@id/divider"
            app:layout_constraintVertical_weight="4">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/item_elapsed_list_view" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/container"
            app:layout_constraintVertical_weight="1.5">

            <Button
                android:id="@+id/left_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="@string/elapse"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/right_button"
                app:layout_constraintHeight="55dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth="110dp" />

            <Button
                android:id="@+id/right_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/seed"
                android:text="@string/start"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight="55dp"
                app:layout_constraintStart_toEndOf="@id/left_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth="110dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>